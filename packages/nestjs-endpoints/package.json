{
  "name": "nestjs-endpoints",
  "version": "0.0.0",
  "description": "A lightweight tool for writing clean and succinct HTTP APIs with NestJS that embraces the REPR design pattern, code colocation, and the Single Responsibility Principle.",
  "author": "Carlos Gonz√°lez <carlos.rgn@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/rhyek/nestjs-endpoints.git"
  },
  "keywords": [
    "nestjs",
    "endpoints",
    "repr",
    "openapi",
    "swagger",
    "file-based",
    "routing",
    "rest",
    "schema",
    "zod",
    "codegen",
    "trpc"
  ],
  "files": [
    "src",
    "dist"
  ],
  "exports": {
    ".": {
      "require": {
        "default": "./dist/cjs/index.js",
        "types": "./dist/cjs/index.d.ts"
      },
      "import": {
        "default": "./dist/esm/index.js",
        "types": "./dist/esm/index.d.ts"
      }
    }
  },
  "types": "./dist/cjs/index.d.ts",
  "scripts": {
    "dev": "tsc-watch --preserveWatchOutput --onSuccess \"../../scripts/build.sh\"",
    "test": "vitest"
  },
  "dependencies": {
    "@orval/query": "~7.8.0",
    "callsites": "^3.1.0",
    "openapi-types": "^12.1.3",
    "orval": "~7.8.0",
    "zod-openapi": "^4.2.4"
  },
  "peerDependencies": {
    "@nestjs/common": ">=10.0.0",
    "@nestjs/core": ">=10.0.0",
    "@nestjs/swagger": ">=7.0.0",
    "zod": ">=3.25.0"
  },
  "devDependencies": {
    "@types/node": "^22.13.1",
    "tsc-alias": "^1.8.10",
    "tsc-watch": "^6.2.1",
    "typescript": "^5.7.3",
    "vitest": "^3.2.4"
  }
}
